<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/movie_item_view_padding">

    <ImageView
        android:id="@+id/movie_item_view_poster"
        android:layout_width="@dimen/movie_item_view_poster_width"
        android:layout_height="@dimen/movie_item_view_poster_height" />

    <TextView
        android:id="@+id/movie_item_view_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="3"
        android:maxLines="3"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>